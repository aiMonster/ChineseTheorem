<Window x:Class="TestForChineseAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestForChineseAPI"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="225">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="150" VerticalAlignment="Center">           
       
            <TextBox Name="tbActivate"/>
            <Button Click="Button_Click" Content="ACTIVATE" Background="LightGreen"/>
            <Separator Margin="0,20" Background="Black" BorderThickness="5"/>
            <TextBox Name="tbTransfer"/>
            <Button Name="btnTransfer" Click="btnTransfer_Click" Content="TRANSFER" Background="Aqua"/>
        </StackPanel>
    </Grid>
</Window>
