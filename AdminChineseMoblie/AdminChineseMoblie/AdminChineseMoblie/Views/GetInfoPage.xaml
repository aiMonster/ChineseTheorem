<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdminChineseMoblie.Views.GetInfoPage"
             Title="Get info">
    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator IsRunning="True" Color="#01579B" IsVisible="{Binding IsBusy}"/>
            <Label Text="Enter promo code:" HorizontalOptions="Center"/>
            <Entry Placeholder="promoCode" Text="{Binding PromoCode}" IsEnabled="{Binding IsBusyInverted}" WidthRequest="70"/>
            <Button Text="GetInfo" Command="{Binding GetInfoCommand}" IsEnabled="{Binding IsBusyInverted}" />



        </StackLayout>
    </ContentPage.Content>
</ContentPage>