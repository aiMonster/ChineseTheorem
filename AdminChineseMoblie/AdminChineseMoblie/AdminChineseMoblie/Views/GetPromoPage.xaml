<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdminChineseMoblie.Views.GetPromoPage"
             Title="Get Promo">
    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator IsRunning="True" Color="#01579B" IsVisible="{Binding IsBusy}"/>
            <Label Text="Enter ampount of points:"/>
            <Entry IsEnabled="{Binding IsBusyInverted}" Text="{Binding Attempts}" Keyboard="Numeric"/>
            <Label Text=" points"/>
            <Button Text="GetPoints" IsEnabled="{Binding IsBusyInverted}" Command="{Binding TransferCommand}" />            
            <Label Text="{Binding GotCode}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>